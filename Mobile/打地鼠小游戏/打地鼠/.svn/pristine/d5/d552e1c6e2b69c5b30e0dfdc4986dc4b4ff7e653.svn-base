*{
	padding: 0;
	margin: 0;
}
body,html{
	width: 100%;
	height: 100%;
}
#bg{
	width: 100%;
	height: 100%;
	background: url(../image/bgimg.JPG)no-repeat;
	background-size: 260%;
}
#bg .didongs{
	width: 100%;
	height: 100%;
	padding-top: 20%;
}
#bg .didongs .border{
	width: 50%;
	height: 20%;
	float: left;
	position: relative;
}
#bg .didongs .border .dishu{
	display: none;
	width: 60%;
	float: left;
	margin-left: 19%;
	position: absolute;
	top: 7px;
	z-index: 5;
}
#bg .didongs .didong{
	width: 100%;
	display: block;
	float: left;
	position: absolute;
	top: 40%;
}
h2{
	position: fixed;
	top: 0;
	font-size: 8vw;
	color: #fff;
	width: 100%;
	height: 10%;
	margin-left: 30%;
	margin-top: 0;
}
p.time{
	position: fixed;
	top: 10px;
	top: 0;
	font-size: 8vw;
	color: #fff;
	width: 100%;
	height: 10%;
	margin-left: 40%;
	margin-top: 160%;
	display: block;
}
